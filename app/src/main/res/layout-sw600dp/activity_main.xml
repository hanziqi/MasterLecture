<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/top_buttom_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sony Master Lecture"
            android:textColor="#fff"
            android:textSize="22sp"/>
        </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <fragment
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/walkman_content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></fragment>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_buttom_bg">
        <RelativeLayout
            android:id="@+id/walkman_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/walkman_image"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/walkman_unselected"/>
                <TextView
                    android:id="@+id/walkman_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音频"
                    android:textColor="#82858b"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alpha_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/alpha_image"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:src="@drawable/alpha_unselected"/>
                <TextView
                    android:id="@+id/alpha_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影像"
                    android:textColor="#82858b"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bravia_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/bravia_image"
                    android:layout_margin="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:src="@drawable/bravia_unselected"/>
                <TextView
                    android:id="@+id/bravia_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电视"
                    android:textColor="#82858b"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>






</LinearLayout>
